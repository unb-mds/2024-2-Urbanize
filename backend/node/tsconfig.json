{
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "ES2022",
    
    "outDir": "./build",

    "paths": {
      "@/*": ["./src/*"]
    },

    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}