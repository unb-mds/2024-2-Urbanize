datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Projeto {
  id                   String           @id @default(uuid())
  nome                 String
  cep                  String?
  endereco             String?
  descricao            String?
  funcaoSocial         String?
  metaGlobal           String?
  dataInicialPrevista  DateTime
  dataFinalPrevista    DateTime
  dataInicialEfetiva   DateTime?
  dataFinalEfetiva     DateTime?
  dataCadastro         DateTime
  especie              String?
  natureza             String
  situacao             String
  uf                   String
  populacaoBeneficiada Int
  tomadores            Tomador[]
  executores           Executor[]
  repassadores         Repassador[]
  eixos                Eixo[]
  tipos                Tipo[]
  geometrias           Geometria[]
  fontesDeRecurso      FonteDeRecurso[]
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
}

model Tomador {
  id        Int     @id @default(autoincrement())
  nome      String
  codigo    BigInt
  projetoId String
  projeto   Projeto @relation(fields: [projetoId], references: [id])
}

model Executor {
  id        Int     @id @default(autoincrement())
  nome      String
  codigo    BigInt
  projetoId String
  projeto   Projeto @relation(fields: [projetoId], references: [id])
}

model Repassador {
  id        Int     @id @default(autoincrement())
  nome      String
  codigo    BigInt
  projetoId String
  projeto   Projeto @relation(fields: [projetoId], references: [id])
}

model Eixo {
  id        Int     @id @default(autoincrement())
  descricao String
  projetoId String
  projeto   Projeto @relation(fields: [projetoId], references: [id])
}

model Tipo {
  id        Int     @id @default(autoincrement())
  descricao String
  idEixo    Int
  projetoId String
  projeto   Projeto @relation(fields: [projetoId], references: [id])
}

model Geometria {
  id          Int      @id @default(autoincrement())
  geometria   String
  dataCriacao DateTime
  origem      String
  latitude    Float?   // Campo para armazenar a latitude
  longitude   Float?   // Campo para armazenar a longitude
  projetoId   String
  projeto     Projeto  @relation(fields: [projetoId], references: [id])
}

model FonteDeRecurso {
  id                        Int     @id @default(autoincrement())
  origem                    String
  valorInvestimentoPrevisto Decimal @db.Decimal(15,2)
  projetoId                 String
  projeto                   Projeto @relation(fields: [projetoId], references: [id])
}
